<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.association :company %>
    <%= f.input :price %>
    <%= f.input :stock_in_hand %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
