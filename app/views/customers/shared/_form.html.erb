<div  class="row">
  <div class='col-md-6'>
    <%= f.input :name, as: :string,  input_html: {class: 'form-control masked exp_desp ', placeholder: 'name'} %>
  </div>
  <div class='col-md-6'>
    <%= f.input :fax,  input_html: {class: 'form-control masked exp_desp ', placeholder: 'fax'} %>
  </div>
</div>
<div  class="row">
