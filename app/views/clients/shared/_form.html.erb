<%= f.input :name, label: "Client Name", placeholder: "Client name" %>
<%= f.input :email, label: "Email", placeholder: "Email" %>
<%= f.input :mob_number, label: "Mobile Number", placeholder: "Mobile Number" %>
<%= f.input 'company_id' , label: "Company", collection: Company.all.map{ |a| [a.name, a.id]} %>

<%= f.fields_for :address do |addr| %>
  <%= addr.input "line_1", label: "Address Line 1" %>
  <%= addr.input "line_2", label: "Address Line 2" %>
  <%= addr.input :country, id: 'dropdown_country',collection: CS.get.map{|k,v| [v,k]}, as: :select,  input_html: {id: " dropdown_country",class: "country_dropdown ", placeholder: "Please select"}%>
  <%= addr.input :state, collection: CS.get(:us).map{|k,v| [v,k]}, as: :select, input_html: {id: "dropdown_state", class: "state_dropdown ", placeholder: "Please select"}%>
  <%= addr.input :city, collection: CS.get(:us, :ak).map{|k,v| [v,k]}, as: :select, input_html: {id: "dropdown_city", class: "city_dropdown ", placeholder: "Please select"}%>
  <%= addr.input "zip", label: "Zip" %>
  <%= f.submit "Save", class: "btn btn-info btn-lg" %>
<%end%>

