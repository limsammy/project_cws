<div class="row">
  <div class="col-md-2">
</div>
<div class="col-sm-12 col-md-8 white-box">
  <h3> ORDER DETAILS </h3>
  <form class="form-horizontal form-material col-md-6 col-md-offset-3">
    <fieldset>
      <div class="form-group">
        <label class="col-md-3" for="fn">Order Number:</label>
        <div class="col-md-9">
          <span> <%= @order.order_number %>
          </span>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3" for="fn">Address:</label>
        <div class="col-md-9">
          <p>Line 1 <%= @order.shipping_address.line_1 %></p>
          <p> Line 2<%= @order.shipping_address.line_2 %></p>
          <p> Zip<%= @order.shipping_address.zip %></p>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-3" for="fn">Order Detail:</label>
        <div class="col-md-9">
          <span> <%= @order.order_description %>
          </span>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-3" for="fn">Order Date:</label>
        <div class="col-md-9">
          <span>
            <%=(@order.ordered_at).to_date.strftime("%d-%m-%Y") %>

          </span>
        </div>
      </div>

      <% if @order.order_items.present? %>
        <div class = "table_responsives">
        	<table border = "1", width = "400", class: "table table-bordered">
        		<col width="500">
        		<col width="530">
        		<col width = "500">
        		<col width = "500">

        		<tr>
        			<th height="40"> Product </th>
        			<th height="40"> Unit Price </th>
        			<th height="40"> Quantity </th>
        			<th height="40"> Amount </th>
        		</tr>
        		<tbody>
        			<% @order.order_items.each_with_index do |i| %>
        				<tr>
        				  <td><%= i.product.name %></td>
        				  <td><%= i.unit_price%> </td>
        				  <td> <%= i.quantity%> </td>
        					<td><%= assign_dollar %> <%= round_off(i.amount) %></td>
        			  </tr>
        			<%end%>
        		</tbody>
          </table>
        </div>

      	Total: <%= assign_dollar %> <%= round_off(@order.total_amount) %><br>
        <%= link_to 'Edit', edit_order_path(@order) %>
      <%end %>
    </fieldset>
  </form>
</div>






