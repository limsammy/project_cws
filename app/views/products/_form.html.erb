<%= simple_nested_form_for @product, html: {class: "form-material form-horizontal"} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.input :company_id, collection: Company.all.map{|a| [a.name, a.id]} %>
    <%= f.input :price %>
    <%= f.input :stock_in_hand %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
