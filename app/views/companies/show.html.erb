<p id="notice"><%= notice %></p>

<h3> COMPANY DETAILS </h3>
<form class="form-horizontal form-material col-md-6 col-md-offset-3">
  <fieldset>
    <div class="form-group">
      <label class="col-md-3" for="fn">Name</label>
      <div class="col-md-9">
        <span> <%= @company.name %>
        </span>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3" for="fn">Address</label>
      <div class="col-md-9">
        <p>Line1: <%= @company.address.line_1 %></p>
        <p> Line2: <%= @company.address.line_2 %></p>
        <p> Zip:<%= @company.address.zip %></p>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3" for="fn">phone:</label>
      <div class="col-md-9">
        <span> <%= @company.phone_number %>
        </span>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3" for="fn">Fax</label>
      <div class="col-md-9">
        <span>
          <%= @company.fax%>
        </span>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3" for="fn">Department</label>
      <div class="col-md-9">
        <span>
          <%= @company.department%>
        </span>
      </div>
    </div>
     <%= link_to 'Edit', edit_company_path(@company)%>|
    <%= link_to 'Back', companies_path %>
  </fieldset>
</form>
