<%= f.input :name, as: :string, label: "Company Name", input_html: {class: "form-control masked exp_desp ", placeholder: "company name"} %>
<%= f.input :fax, label: "Fax", input_html: {class: "form-control masked exp_desp ", placeholder: "Fax"} %>
<%= f.input :phone_number, as: :string, label: "Phone Number",:include_blank => "Please select...", input_html: {class: "form-control masked exp_desp ", placeholder: "Enter your Number"} %>

<%= f.fields_for :address do |addr| %>
  <%= addr.input "line_1", label: "Address Line 1" %>
  <%= addr.input "line_2", label: "Address Line 2" %>
  <%= addr.input :country, collection: CS.get.map{|k,v| [v,k]}, as: :select ,:include_blank => "Select Country...", input_html: {class: "country_dropdown ", placeholder: "Please select"}%>
  <%= addr.input :state, collection: CS.get.map{|k,v| [v,k]}, as: :select, :include_blank => "Select State...", input_html: {class: "state_dropdown ", placeholder: "Please select"} %>
  <%= addr.input :city, collection: CS.get.map{|k,v| [v,k]}, as: :select, :include_blank => "Select City...", input_html: {class: "city_dropdown ", placeholder: "Please select"} %>

  <%= addr.input "zip", label: "Zip" %>
<% end %>


<%= f.submit "Save", class: "btn btn-info btn-lg"%>
